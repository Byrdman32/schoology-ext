{
  "manifest_version": 2,
  "name": "Schoology Assignment Checker",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["https://schoology.monroeisd.us/home"],
      "js": ["async-home.js"]
    },
    {
      "matches": ["https://schoology.monroeisd.us/assignment/*"],
      "js": ["async-assignment.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://127.0.0.1/",
    "storage"
  ]
}