{
  "manifest_version": 2,
  "name": "Schoology Check",
  "description": "NOTE: If you have completed assignments when you first install this extension the checks will not pop up right away. You have to click on the assignments you have completed for the extension to register that they need to have a check mark.",
  "version": "1.3.7",
  "author": "Jacob Sadowyj",
  "content_scripts": [{
      "matches": ["https://schoology.monroeisd.us/","https://schoology.monroeisd.us/home", "https://app.schoology.com/", "https://app.schoology.com/home"],
      "js": ["src/jquery-3.5.0.min.js", "src/shared.js", "src/async-home.js"]
    },
    {
      "matches": ["https://schoology.monroeisd.us/assignment/*", "https://app.schoology.com/assignment/*"],
      "js": ["src/jquery-3.5.0.min.js", "src/shared.js", "src/async-assignment.js"]
    }
  ],
  "browser_action": {
    "default_popup": "public/popup.html",
    "default-icon": "public/schoology-icon.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["src/jquery-3.5.0.min.js"]
  },
  "icons": { 
    "16": "public/schoology-icon.png",
    "48": "public/schoology-icon.png",
   "128": "public/schoology-icon.png" 
  }
}