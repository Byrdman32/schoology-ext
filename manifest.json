{
  "manifest_version": 2,
  "name": "Schoology Check",
  "description": "Schoology extension that makes it easy to distinguish completed assignments.",
  "version": "1.4.0",
  "author": "Jacob Sadowyj & Ryan Salik",
  "content_scripts": [
    {
      "matches": [
        "https://schoology.monroeisd.us/",
        "https://schoology.monroeisd.us/home",
        "https://schoology.westportps.org/",
        "https://schoology.westportps.org/home",
        "https://*.schoology.com/",
        "https://*.schoology.com/home"
      ],
      "js": [
        "src/jquery-3.5.0.min.js",
        "src/utils.js",
        "src/home.js",
        "src/foreground.js"
      ],
      "css": [
        "src/css/home.css"
      ]
    },
    {
      "matches": [
        "https://schoology.monroeisd.us/assignment/*",
        "https://schoology.westportps.org/assignment/*",
        "https://*.schoology.com/assignment/*"
      ],
      "js": [
        "src/jquery-3.5.0.min.js",
        "src/utils.js",
        "src/assignments.js",
        "src/foreground.js"
      ],
      "css": [
        "src/css/assignments.css"
      ]
    },
    {
      "matches": [
        "https://schoology.westportps.org/calendar/*",
        "https://*.schoology.com/calendar/*"
      ],
      "js": [
        "src/jquery-3.5.0.min.js",
        "src/utils.js",
        "src/calendar.js",
        "src/foreground.js"
      ],
      "css": [
        "src/css/calendar.css"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "public/popup.html",
    "default-icon": "public/schoology-icon.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "src/jquery-3.5.0.min.js"
    ]
  },
  "icons": {
    "16": "public/schoology-icon.png",
    "48": "public/schoology-icon.png",
    "128": "public/schoology-icon.png"
  }
}
